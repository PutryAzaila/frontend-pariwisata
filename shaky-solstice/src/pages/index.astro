---
// src/pages/index.astro (atau dashboard.astro)
import AdminLayout from '../layouts/AdminLayout.astro';
---

<AdminLayout title="Dashboard" pageTitle="Dashboard - Sistem Pariwisata">
  <!-- Stats Cards -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 lg:gap-6 mb-6 lg:mb-8">
    <div class="card">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-1">Total Pokdarwis</p>
          <p class="text-2xl font-bold text-gray-900 dark:text-gray-100">5</p>
          <p class="text-xs text-green-600 dark:text-green-400">User</p>
        </div>
        <div class="w-12 h-12 bg-green-100 dark:bg-green-900/30 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-1">Total Bumdes</p>
          <p class="text-2xl font-bold text-gray-900 dark:text-gray-100">3</p>
          <p class="text-xs text-purple-600 dark:text-purple-400">User</p>
        </div>
        <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900/30 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-1">Pengunjung Hari Ini</p>
          <p class="text-2xl font-bold text-gray-900 dark:text-gray-100">127</p>
          <p class="text-xs text-blue-600 dark:text-blue-400">+12% dari kemarin</p>
        </div>
        <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-1">Pendapatan Bulan Ini</p>
          <p class="text-2xl font-bold text-gray-900 dark:text-gray-100">Rp 45,2M</p>
          <p class="text-xs text-green-600 dark:text-green-400">+8% dari bulan lalu</p>
        </div>
        <div class="w-12 h-12 bg-yellow-100 dark:bg-yellow-900/30 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Tutorial Section -->
  <div class="grid grid-cols-1 xl:grid-cols-3 gap-6 lg:gap-8">
    <!-- Tutorial Card -->
    <div class="xl:col-span-2">
      <div class="card">
        <div class="flex flex-col sm:flex-row sm:items-center justify-between mb-6">
          <h2 class="text-lg sm:text-xl font-bold text-gray-900 dark:text-gray-100 mb-2 sm:mb-0">Panduan Penggunaan Sistem</h2>
          <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 text-sm font-medium rounded-full w-fit">Tutorial</span>
        </div>
        
        <div class="space-y-6" id="tutorialContent">
          <!-- Getting Started - Tampil untuk semua role -->
          <div class="border-l-4 border-blue-500 pl-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-3">üöÄ Memulai</h3>
            <ul class="space-y-2 text-gray-700 dark:text-gray-300">
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 rounded-full flex items-center justify-center text-sm font-medium mt-0.5">1</span>
                <span>Navigasi menggunakan sidebar di sebelah kiri untuk mengakses berbagai fitur</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 rounded-full flex items-center justify-center text-sm font-medium mt-0.5">2</span>
                <span>Dashboard menampilkan ringkasan data dan statistik terkini</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 rounded-full flex items-center justify-center text-sm font-medium mt-0.5">3</span>
                <span>Setiap modul memiliki fitur CRUD (Create, Read, Update, Delete)</span>
              </li>
            </ul>
          </div>

          <!-- POKDARWIS - Hanya tampil untuk role pokdarwis dan admin -->
          <div class="border-l-4 border-green-500 pl-6 tutorial-pokdarwis" style="display: none;">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-3">üé´ Mengelola POKDARWIS</h3>
            <ul class="space-y-2 text-gray-700 dark:text-gray-300">
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 rounded-full flex items-center justify-center text-sm font-medium mt-0.5 flex-shrink-0">1</span>
                <a href="/pokdarwis/tiket" class="hover:underline block hover:text-green-600 dark:hover:text-green-400 transition-colors">
                  <strong>Tiket Wisata:</strong> Kelola penjualan tiket harian dengan setoran 25.000/orang
                </a>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 rounded-full flex items-center justify-center text-sm font-medium mt-0.5 flex-shrink-0">2</span>
                <a href="/pokdarwis/river-tubing" class="hover:underline block hover:text-green-600 dark:hover:text-green-400 transition-colors">
                  <strong>River Tubing:</strong> Atur penyewaan peralatan river tubing per sesi
                </a>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 rounded-full flex items-center justify-center text-sm font-medium mt-0.5 flex-shrink-0">3</span>
                <a href="/pokdarwis/warung" class="hover:underline block hover:text-green-600 dark:hover:text-green-400 transition-colors">
                  <strong>Sewa Warung:</strong> Pantau setoran mingguan dari warung-warung
                </a>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 rounded-full flex items-center justify-center text-sm font-medium mt-0.5 flex-shrink-0">4</span>
                <a href="/pokdarwis/umkm" class="hover:underline block hover:text-green-600 dark:hover:text-green-400 transition-colors">
                  <strong>Sewa UMKM:</strong> Kelola setoran bulanan dari UMKM lokal
                </a>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 rounded-full flex items-center justify-center text-sm font-medium mt-0.5 flex-shrink-0">5</span>
                <a href="/pokdarwis/pakan-ikan" class="hover:underline block hover:text-green-600 dark:hover:text-green-400 transition-colors">
                  <strong>Pakan Ikan:</strong> Atur penjualan pakan ikan untuk pengunjung
                </a>
              </li>
            </ul>
          </div>

          <!-- BUMDES - Hanya tampil untuk role bumdes dan admin -->
          <div class="border-l-4 border-purple-500 pl-6 tutorial-bumdes" style="display: none;">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-3">üè™ Mengelola BUMDES</h3>
            <ul class="space-y-2 text-gray-700 dark:text-gray-300">
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-300 rounded-full flex items-center justify-center text-sm font-medium mt-0.5 flex-shrink-0">1</span>
                <a href="/bumdes/resto" class="hover:underline hover:text-purple-600 dark:hover:text-purple-400 transition-colors">
                  <strong>Sewa Resto:</strong> Pantau setoran bulanan dari restoran
                </a>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-300 rounded-full flex items-center justify-center text-sm font-medium mt-0.5 flex-shrink-0">2</span>
                <a href="/bumdes/internet" class="hover:underline hover:text-purple-600 dark:hover:text-purple-400 transition-colors">
                  <strong>Sewa Internet:</strong> Kelola pembayaran dari pihak ketiga untuk layanan internet
                </a>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-300 rounded-full flex items-center justify-center text-sm font-medium mt-0.5 flex-shrink-0">3</span>
                <a href="/bumdes/usaha" class="hover:underline hover:text-purple-600 dark:hover:text-purple-400 transition-colors">
                  <strong>Tambah Usaha:</strong> Daftarkan usaha baru ke dalam sistem BUMDES
                </a>
              </li>
            </ul>
          </div>

          <!-- Reports - Tampil untuk semua role -->
          <div class="border-l-4 border-yellow-500 pl-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-3">üìä Laporan</h3>
            <ul class="space-y-2 text-gray-700 dark:text-gray-300">
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-300 rounded-full flex items-center justify-center text-sm font-medium mt-0.5 flex-shrink-0">1</span>
                <span>Akses laporan keuangan POKDARWIS dan BUMDES secara terpisah</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-300 rounded-full flex items-center justify-center text-sm font-medium mt-0.5 flex-shrink-0">2</span>
                <span>Export data dalam format Excel atau PDF</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-300 rounded-full flex items-center justify-center text-sm font-medium mt-0.5 flex-shrink-0">3</span>
                <span>Filter laporan berdasarkan tanggal, jenis usaha, atau periode tertentu</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-300 rounded-full flex items-center justify-center text-sm font-medium mt-0.5 flex-shrink-0">4</span>
                <span>Grafik dan visualisasi data untuk analisis yang lebih mudah</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="mt-6 lg:mt-8 flex flex-col sm:flex-row gap-3 sm:gap-4">
          <button onclick="navigateToInput()" class="btn-primary flex-1 sm:flex-none flex items-center justify-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Mulai Input Data
          </button>
          <button onclick="navigateToReport()" class="btn-secondary flex-1 sm:flex-none flex items-center justify-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Lihat Laporan
          </button>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="space-y-4 lg:space-y-6">
      <!-- Quick Actions Card -->
      <div class="card">
        <h3 class="text-base sm:text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4">Aksi Cepat</h3>
        <div class="space-y-3">
          <a href="/pokdarwis" class="block p-3 border border-gray-200 dark:border-gray-700 rounded-lg hover:border-green-300 dark:hover:border-green-600 hover:bg-green-50 dark:hover:bg-green-900/10 transition-colors">
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 bg-green-100 dark:bg-green-900/30 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
                </svg>
              </div>
              <div>
                <p class="font-medium text-gray-900 dark:text-gray-100">Input Tiket</p>
                <p class="text-sm text-gray-500 dark:text-gray-400">Catat penjualan tiket hari ini</p>
              </div>
            </div>
          </a>
          
          <a href="/bumdes" class="block p-3 border border-gray-200 dark:border-gray-700 rounded-lg hover:border-purple-300 dark:hover:border-purple-600 hover:bg-purple-50 dark:hover:bg-purple-900/10 transition-colors">
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 bg-purple-100 dark:bg-purple-900/30 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
              <div>
                <p class="font-medium text-gray-900 dark:text-gray-100">Setoran Resto</p>
                <p class="text-sm text-gray-500 dark:text-gray-400">Input setoran bulanan resto</p>
              </div>
            </div>
          </a>
          
          <a href="/laporan/pokdarwis" class="block p-3 border border-gray-200 dark:border-gray-700 rounded-lg hover:border-blue-300 dark:hover:border-blue-600 hover:bg-blue-50 dark:hover:bg-blue-900/10 transition-colors">
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 bg-blue-100 dark:bg-blue-900/30 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
              <div>
                <p class="font-medium text-gray-900 dark:text-gray-100">Lihat Laporan</p>
                <p class="text-sm text-gray-500 dark:text-gray-400">Akses semua laporan</p>
              </div>
            </div>
          </a>
        </div>
      </div>

      <!-- System Info -->
      <div class="card">
        <h3 class="text-base sm:text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4">Informasi Sistem</h3>
        <div class="space-y-3">
          <div class="flex justify-between items-center">
            <span class="text-gray-600 dark:text-gray-400">Versi Sistem</span>
            <span class="font-medium text-gray-900 dark:text-gray-100">v1.0.0</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-gray-600 dark:text-gray-400">Status Server</span>
            <span class="flex items-center gap-2">
              <span class="w-2 h-2 bg-green-500 rounded-full"></span>
              <span class="text-green-600 dark:text-green-400 font-medium">Online</span>
            </span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-gray-600 dark:text-gray-400">Login Terakhir</span>
            <span id="lastLoginTime" class="font-medium text-gray-900 dark:text-gray-100">-</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-gray-600 dark:text-gray-400">Role</span>
            <span id="userRole" class="font-medium text-gray-900 dark:text-gray-100 capitalize">-</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>

<script>
  // Dashboard functionality
  function navigateToInput() {
    const userRole = getUserRole();
    
    // Redirect based on role
    if (userRole === 'pokdarwis') {
      window.location.href = '/pokdarwis';
    } else if (userRole === 'bumdes') {
      window.location.href = '/bumdes';
    } else {
      // Admin bisa pilih
      window.location.href = '/pokdarwis';
    }
  }

  function navigateToReport() {
    window.location.href = '/laporan';
  }

  function getUserRole() {
    if (window.AdminUtils) {
      const userData = window.AdminUtils.auth.getUserData();
      if (userData && userData.role) {
        return userData.role.toLowerCase();
      }
    }
    
    const roleFromStorage = localStorage.getItem('user_role');
    return roleFromStorage ? roleFromStorage.toLowerCase() : 'admin';
  }

  function showTutorialByRole() {
    const userRole = getUserRole();
    
    // Sembunyikan semua tutorial spesifik dulu
    const pokdarwisTutorial = document.querySelector('.tutorial-pokdarwis') as HTMLElement;
    const bumdesTutorial = document.querySelector('.tutorial-bumdes') as HTMLElement;
    
    if (pokdarwisTutorial) pokdarwisTutorial.style.display = 'none';
    if (bumdesTutorial) bumdesTutorial.style.display = 'none';
    
    // Tampilkan tutorial sesuai role
    if (userRole === 'pokdarwis') {
      if (pokdarwisTutorial) pokdarwisTutorial.style.display = 'block';
    } else if (userRole === 'bumdes') {
      if (bumdesTutorial) bumdesTutorial.style.display = 'block';
    } else if (userRole === 'admin') {
      // Admin bisa lihat semua tutorial
      if (pokdarwisTutorial) pokdarwisTutorial.style.display = 'block';
      if (bumdesTutorial) bumdesTutorial.style.display = 'block';
    }
  }

  function loadUserInfo() {
    if (!window.AdminUtils) return;
    
    const userData = window.AdminUtils.auth.getUserData();
    const loginTime = localStorage.getItem('login_time');
    const userRole = localStorage.getItem('user_role');
    
    // Update last login time
    const lastLoginElement = document.getElementById('lastLoginTime');
    if (lastLoginElement && loginTime) {
      const loginDate = new Date(loginTime);
      const now = new Date();
      const timeDiff = now.getTime() - loginDate.getTime();
      const hoursDiff = Math.floor(timeDiff / (1000 * 60 * 60));
      const minutesDiff = Math.floor((timeDiff % (1000 * 60 * 60)) / (1000 * 60));
      
      if (hoursDiff > 0) {
        lastLoginElement.textContent = `${hoursDiff} jam lalu`;
      } else if (minutesDiff > 0) {
        lastLoginElement.textContent = `${minutesDiff} menit lalu`;
      } else {
        lastLoginElement.textContent = 'Baru saja';
      }
    }
    
    // Update user role
    const userRoleElement = document.getElementById('userRole');
    if (userRoleElement) {
      if (userData && userData.role) {
        userRoleElement.textContent = userData.role;
      } else if (userRole) {
        userRoleElement.textContent = userRole;
      } else {
        userRoleElement.textContent = 'Admin';
      }
    }
  }

  // Load dashboard data when page loads
  document.addEventListener('DOMContentLoaded', () => {
    // Wait for AdminUtils to be available
    setTimeout(() => {
      loadUserInfo();
      showTutorialByRole();
    }, 100);
  });
</script>