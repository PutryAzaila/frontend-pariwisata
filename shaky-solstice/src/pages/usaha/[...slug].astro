      (window as any).showNotificationModal({
        type: 'success',
        title: 'Berhasil!',
        message: isEdit ? 'Data berhasil diperbarui!' : 'Data berhasil ditambahkan!',
        autoClose: true,
        duration: 3000
      });
    } else {
      alert(isEdit ? 'Data berhasil diperbarui!' : 'Data berhasil ditambahkan!');
    }      
