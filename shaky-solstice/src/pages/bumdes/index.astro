        info: "Menampilkan _START_ - _END_ dari _TOTAL_ transaksi",
        infoEmpty: "Tidak ada data",
        infoFiltered: "(difilter dari _MAX_ total)",
        paginate: {
          first: "Awal",
          last: "Akhir", 
          next: "Berikutnya",
          previous: "Sebelumnya"
        }
      },
