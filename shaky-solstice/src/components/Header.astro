---
import LogoutModal from './LogoutModal.astro';

export interface Props {
  title?: string;
  subtitle?: string;
  showBreadcrumb?: boolean;
}

const {
  title = "Dashboard",
  subtitle = "Selamat datang, Admin! Kelola sistem pariwisata dengan mudah melalui dashboard ini",
  showBreadcrumb = false,
} = Astro.props;

const currentDate = new Date().toLocaleDateString('id-ID', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<header class="lg:sticky top-0 z-30 bg-gray-50">
  <div class="bg-white border-b border-gray-200 shadow-sm">
    <div class="px-4 sm:px-6 lg:px-8 py-3 flex items-center justify-between">
      
      <!-- Left -->
      <div class="flex items-center gap-4">
        <button class="lg:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors" onclick="toggleSidebar()">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>

        {showBreadcrumb && (
          <nav class="flex items-center text-sm text-gray-500">
            <a href="/" class="hover:text-gray-700 transition-colors">Dashboard</a>
            <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
            <span class="text-gray-900">{title}</span>
          </nav>
        )}
      </div>
      
      <!-- Right -->
      <div class="flex items-center gap-3">
        <!-- Date -->
        <div class="hidden sm:flex items-center gap-2 text-sm text-gray-700 bg-blue-50 border border-blue-200 px-4 py-2 rounded-lg">
          <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 
                  00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span class="font-medium">{currentDate}</span>
        </div>

        <!-- Theme Toggle -->
        <!-- <div class="bg-gray-50 border border-gray-200 rounded-lg p-1">
          <button class="p-2 text-gray-600 hover:text-gray-900 hover:bg-white rounded-md transition-all duration-200" onclick="toggleTheme()" title="Toggle Theme">
            <svg class="w-5 h-5 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
            </svg>
            <svg class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
          </button>
        </div> -->

        <!-- Profile Dropdown -->
        <div class="relative bg-gray-50 border border-gray-200 rounded-lg p-1">
          <button class="flex items-center gap-2 p-2 text-gray-600 hover:text-gray-900 hover:bg-white rounded-md transition-all duration-200" onclick="toggleProfileDropdown()">
            <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
              <span class="text-white text-sm font-medium">A</span>
            </div>
          </button>

          <div class="absolute right-0 top-full mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-2 hidden" id="profile-dropdown">
            <div class="px-4 py-2 border-b border-gray-100">
              <p class="text-sm font-medium text-gray-900">Admin</p>
              <p class="text-xs text-gray-500">admin@gmail.com</p>
            </div>
            <a href="/profile" class="flex items-center gap-2 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">Profile</a>
            <div class="border-t border-gray-100 mt-2 pt-2">
              <a href="#" onclick="showLogoutModal()" class="flex items-center gap-2 px-4 py-2 text-sm text-red-600 hover:bg-red-50 transition-colors">Logout</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- TITLE SECTION -->
<div class="bg-white border-b border-gray-100">
  <div class="px-4 sm:px-6 lg:px-8 py-6">
    <div class="bg-gradient-to-r from-blue-50 to-purple-50 border border-blue-100 rounded-xl p-6">
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-2">{title}</h1>
      <p class="text-base sm:text-lg text-gray-600">{subtitle}</p>
    </div>
  </div>
</div>

<!-- Logout Modal -->
<LogoutModal />

<script>
  function toggleTheme() {
    const html = document.documentElement;
    const isDark = html.classList.contains('dark');
    if (isDark) {
      html.classList.remove('dark');
      localStorage.setItem('theme', 'light');
    } else {
      html.classList.add('dark');
      localStorage.setItem('theme', 'dark');
    }
  }

  function toggleProfileDropdown() {
    const dropdown = document.getElementById('profile-dropdown');
    if (dropdown) dropdown.classList.toggle('hidden');
  }

  document.addEventListener('click', function(e) {
    const dropdown = document.getElementById('profile-dropdown');
    const clickedButton = document.querySelector('button[onclick="toggleProfileDropdown()"]');
    if (dropdown && e.target instanceof Node && !dropdown.contains(e.target) && !clickedButton?.contains(e.target)) {
      dropdown.classList.add('hidden');
    }
  });

  document.addEventListener('DOMContentLoaded', function() {
    const savedTheme = localStorage.getItem('theme') || 'light';
    const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    if (savedTheme === 'dark' || (!savedTheme && systemDark)) document.documentElement.classList.add('dark');
  });

  window.toggleTheme = toggleTheme;
  window.toggleProfileDropdown = toggleProfileDropdown;
</script>
